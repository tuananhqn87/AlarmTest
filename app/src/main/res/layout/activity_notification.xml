<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="org.anhtran.wakeup.NotificationActivity">

    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notif_activity_alarm_name"
                style="@style/EditorFieldStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/notification_default_name"
                android:textColor="#FFF"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/notif_activity_alarm_time"
                style="@style/EditorFieldStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal"
                android:paddingBottom="16dp"
                android:paddingTop="8dp"
                android:textColor="#FFF"
                android:textSize="24sp"
                tools:text="6:00:00 AM" />

            <TextView
                android:id="@+id/notif_activity_dismiss"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/dismiss_background"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/dismiss"
                android:textColor="#FFF"
                android:textSize="24sp" />

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
